<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Cyberelay Portal Server</display-name>
	<listener>
		<listener-class>
			org.cyberelay.portal.PortalApplicationBootstrapper
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.cyberelay.portletcontainer.PortletApplicationBootstrapper
		</listener-class>
	</listener>
	<filter>
        <filter-name>PortalRequestFilter</filter-name>
        <filter-class>org.cyberelay.portal.PortalRequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PortalRequestFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>    
    <servlet>
		<servlet-name>AggregationServlet</servlet-name>
		<servlet-class>
			org.cyberelay.portal.aggregation.AggregationServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>
			PortletInvocationServlet
		</servlet-name>
		<servlet-class>
			org.cyberelay.portletcontainer.PortletInvocationServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AggregationServlet</servlet-name>
		<url-pattern>/page</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AggregationServlet</servlet-name>
		<url-pattern>/page/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PortletInvocationServlet</servlet-name>
		<url-pattern>/pis</url-pattern>
	</servlet-mapping>
    <taglib>
        <taglib-uri>http://java.sun.com/portlet_2_0</taglib-uri>
        <taglib-location>/WEB-INF/tld/portlet.tld</taglib-location>
    </taglib>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
